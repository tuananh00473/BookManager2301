<?xml version="1.0" encoding="utf-8"?>

<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/menu_dialog_rgMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <RadioButton
            android:id="@+id/menu_dialog_rbSetReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set remider"
            android:textColor="@color/Black"
            android:checked="false"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/radio_background_group3item"/>
    <RadioButton
            android:id="@+id/menu_dialog_rbEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="@color/Black"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/radio_background_group3item"/>
    <RadioButton
            android:id="@+id/menu_dialog_rbDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@color/Black"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/radio_background_group3item"/>
</RadioGroup>
